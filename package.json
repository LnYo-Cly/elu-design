    "@elu-design/theme-chalk": "workspace:^0.0.1",
    "@elu-design/utils": "workspace:^0.0.1"
  },
  "lint-staged": {
    "packages/**/!(node_modules|dist|font|es|lib)/**/*.{js,jsx,ts,tsx,vue}": [
      "eslint --ext .js,.jsx,.vue,.ts,.tsx --fix --quiet ./"
    ]
  }
